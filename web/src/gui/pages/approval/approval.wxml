<view class="page">
  <view class="top-tip" wx:if="{{showTopTip}}">{{errorMsg}}</view>
  <form>
    <view class="weui-cells weui-cells_after-titl">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">账单</view>
                </view>
                <view class="weui-cell__bd">
                    <view class="weui-input">{{costGroup.groupName}}</view>
                </view>
            </view>
    </view>
    <view class="weui-cells__title">你需要发送验证信息，等待管理员通过</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入验证信息" />
            </view>
        </view>
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="showTopTips">确定</button>
    </view>
  </form>
</view>